<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreen"
    tools:context="com.example.aluno.carrieon.Telas.EntradaActivity"><![CDATA[
    android:background="@drawable/gradient_1"
    android:backgroundTint="@drawable/gradient_1">





    ]]>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/amethysta"
            android:text="CarrieOn"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="italic"
            android:typeface="serif" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/dialog_shape_layout"
            android:backgroundTint="@color/colorWhite">

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:backgroundTint="@color/colorGreen"
                android:backgroundTintMode="src_in"
                android:ems="10"
                android:foregroundTint="@color/colorGreen"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorGreen"
                android:textColorHighlight="@color/colorGreen"
                android:textColorLink="@color/colorGreen"
                android:textCursorDrawable="@color/colorGreen" />


            <EditText
                android:id="@+id/editSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView3"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/colorGreen"
                android:ems="10"
                android:foregroundTint="@color/colorGreen"
                android:inputType="textPassword"
                android:textColor="@color/colorGreen"
                android:textColorHighlight="@color/colorGreen"
                android:textColorLink="@color/colorGreen"
                android:textCursorDrawable="@color/colorGreen" />

            <Button
                android:id="@+id/btnLogin"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEsquecerSenha"
                android:layout_alignStart="@+id/editSenha"
                android:layout_alignEnd="@+id/txtEsquecerSenha"
                android:layout_marginTop="21dp"
                android:background="@drawable/dialog_shape_layout"
                android:backgroundTint="@color/colorGreenNew"
                android:fontFamily="@font/amethysta"
                android:text="Entrar"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editEmail"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/amethysta"
                android:text="E-MAIL"
                android:textColor="@color/colorGreen"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editEmail"
                android:layout_alignStart="@+id/editEmail"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/amethysta"
                android:text="SENHA"
                android:textColor="@color/colorGreen"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="11dp"
                android:clickable="true"
                android:cursorVisible="true"
                android:fontFamily="@font/amethysta"
                android:text="Ainda nÃ£o possui conta? Cadastre-se!"
                android:textColor="@color/colorGreen"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtEsquecerSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editSenha"
                android:layout_alignEnd="@+id/editSenha"
                android:fontFamily="@font/amethysta"
                android:text="Esqueceu sua senha?"
                android:textColor="@color/colorGreen"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
