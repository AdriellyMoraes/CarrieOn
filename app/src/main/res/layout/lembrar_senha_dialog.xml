<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    tools:context=".Telas.LembrarSenhaDialog">

    <EditText
        android:id="@+id/edt_snh_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_snh_cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/edt_snh_email"
        android:layout_marginBottom="69dp"
        android:background="@drawable/dialog_shape_layout"
        android:backgroundTint="@color/color_red"
        android:fontFamily="@font/amethysta"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_snh_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edt_snh_email"
        android:layout_alignTop="@+id/btn_snh_cancelar"
        android:background="@drawable/dialog_shape_layout"
        android:fontFamily="@font/amethysta"
        android:text="Enviar"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edt_snh_email"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/amethysta"
        android:text="Informe seu email:"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />
</RelativeLayout>