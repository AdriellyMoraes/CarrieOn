<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGreen"
        tools:context="com.example.aluno.carrieon.Telas.CadastroActivity">

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="280dp"
            android:layout_height="400dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="132dp"
            android:background="@drawable/dialog_shape_layout"
            android:backgroundTint="@color/colorWhite">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="149dp"
                android:layout_marginBottom="27dp"
                android:background="@drawable/dialog_shape_layout"
                android:backgroundTint="@color/color_red"
                android:fontFamily="@font/amethysta"
                android:text="Cancelar"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnConfirmar"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/btnCancelar"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/dialog_shape_layout"
                android:backgroundTint="@color/colorGreenNew"
                android:fontFamily="@font/amethysta"
                android:text="Confirmar"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/txtDataNasc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEmail"
                android:layout_alignStart="@+id/txtEmail"
                android:layout_marginTop="18dp"
                android:backgroundTint="@android:color/black"
                android:ems="10"
                android:fontFamily="@font/amethysta"
                android:hint="Data de nascimento"
                android:inputType="date"
                android:textColor="@android:color/black"
                android:textColorHighlight="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textColorLink="@android:color/black"
                android:textCursorDrawable="@android:color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txtConfirmarSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtDataNasc"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="102dp"
                android:backgroundTint="@color/colorPurplee"
                android:ems="10"
                android:fontFamily="@font/amethysta"
                android:hint="Confirme sua senha"
                android:inputType="textPassword"
                android:textColor="@color/colorPurplee"
                android:textColorHighlight="@color/colorPurplee"
                android:textColorHint="@color/colorPurplee"
                android:textColorLink="@color/colorPurplee"
                android:textCursorDrawable="@color/colorPurplee"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txtSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtDataNasc"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="161dp"
                android:backgroundTint="@android:color/black"
                android:ems="10"
                android:fontFamily="@font/amethysta"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textColor="@android:color/black"
                android:textColorHighlight="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textColorLink="@android:color/black"
                android:textCursorDrawable="@android:color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="78dp"
                android:layout_marginEnd="34dp"
                android:backgroundTint="@android:color/black"
                android:ems="10"
                android:fontFamily="@font/amethysta"
                android:hint="Email"
                android:inputType="textPersonName"
                android:textColor="@android:color/black"
                android:textColorHighlight="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textColorLink="@android:color/black"
                android:textCursorDrawable="@android:color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/txtNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtDataNasc"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="21dp"
                android:backgroundTint="@android:color/black"
                android:ems="10"
                android:fontFamily="@font/amethysta"
                android:hint="Nome"
                android:inputType="textPersonName"
                android:phoneNumber="false"
                android:textColor="@android:color/black"
                android:textColorHighlight="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textColorLink="@android:color/black"
                android:textCursorDrawable="@android:color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/icon_nome" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView3"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="86dp"
                app:srcCompat="@drawable/icon_email" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView3"
                android:layout_centerVertical="false"
                android:layout_marginStart="0dp"
                android:layout_marginTop="142dp"
                android:adjustViewBounds="false"
                app:srcCompat="@drawable/icon_nasc" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView3"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="173dp"
                app:srcCompat="@drawable/icon_senha" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView3"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="109dp"
                app:srcCompat="@drawable/icon_confirmar" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="91dp"
            android:fontFamily="@font/amethysta"
            android:text="Cadastro"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
