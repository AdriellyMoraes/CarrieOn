<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="450dp">

    <RelativeLayout
        android:id="@+id/relative_not_titulo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/dialog_shape_layout"
        android:backgroundTint="@color/colorWhite">

        <TextView
            android:id="@+id/textView_not_Titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:fontFamily="@font/amethysta"
            android:text="Título"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/ed_not_Titulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="42dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_not_atividade"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="105dp"
        android:background="@drawable/dialog_shape_layout"
        android:backgroundTint="@android:color/background_light">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/amethysta"
            android:text="Atividades"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/img_not_atividade"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/txt_not_atividade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="TextView" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_not_humor"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/relative_not_atividade"
        android:layout_marginStart="-80dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/btn_not_editar"
        android:background="@drawable/dialog_shape_layout"
        android:backgroundTint="@color/colorWhite">

        <TextView
            android:id="@+id/txt_not_humorr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/amethysta"
            android:text="Humor"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/img_not_humor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/txt_not_humor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:text="TextView" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_not_nota"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relative_not_atividade"
        android:layout_marginTop="15dp"
        android:background="@drawable/dialog_shape_layout"
        android:backgroundTint="@color/colorWhite">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/ed_not_Descricao"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorGreen"
            android:foregroundTint="@color/colorGreen"
            android:textColor="@color/colorGreen"
            android:textColorHighlight="@color/colorGreen"
            android:textColorHint="@color/colorGreen"
            android:textColorLink="@color/colorGreen"
            android:textCursorDrawable="@color/colorGreen"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_not_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:fontFamily="@font/amethysta"
            android:text="Descrição"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_not_descartar"
        android:layout_width="122dp"
        android:layout_height="50dp"
        android:layout_below="@+id/relative_not_nota"
        android:layout_marginStart="-52dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/relative_not_atividade"
        android:background="@drawable/dialog_shape_layout"
        android:backgroundTint="@color/color_red"
        android:fontFamily="@font/amethysta"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_not_salvar"
        android:layout_width="122dp"
        android:layout_height="50dp"
        android:layout_below="@+id/relative_not_nota"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@+id/relative_not_humor"
        android:background="@drawable/dialog_shape_layout"
        android:fontFamily="@font/amethysta"
        android:text="Salvar"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/img_not_fechar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/icon_cancel_red" />

    <Button
        android:id="@+id/btn_not_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_not_excluir"
        android:layout_marginEnd="50dp"
        android:background="@drawable/dialog_shape_layout"
        android:fontFamily="@font/amethysta"
        android:text="Editar"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_not_excluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_not_descartar"
        android:layout_marginStart="50dp"
        android:background="@drawable/dialog_shape_layout"
        android:backgroundTint="@color/color_red"
        android:fontFamily="@font/amethysta"
        android:text="Excluir"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />
</RelativeLayout>
