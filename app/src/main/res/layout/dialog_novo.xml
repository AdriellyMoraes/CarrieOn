<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeNota"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreen"
    android:focusable="auto">


    <RelativeLayout
        android:id="@+id/relative_titulo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/dialog_shape_layout"
        android:backgroundTint="@color/colorWhite">

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:fontFamily="@font/amethysta"
            android:text="Título"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/edTitulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="0dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_atividades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp"
        android:background="@drawable/dialog_shape_layout"
        android:backgroundTint="@android:color/background_light">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_atividades"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_below="@+id/textView7"
            android:paddingLeft="23dp"
            android:paddingTop="10dp"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/amethysta"
            android:text="Atividades"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_humor"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_below="@+id/relative_atividades"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/dialog_shape_layout"
        android:backgroundTint="@color/colorWhite">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:fontFamily="@font/amethysta"
            android:text="Humor"
            android:textColor="@android:color/black" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_humores"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/textView8"
            android:layout_alignParentBottom="true"
            android:paddingLeft="23dp"
            android:paddingTop="10dp"
            android:scrollbars="vertical" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_notas"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="91dp"
        android:background="@drawable/dialog_shape_layout"
        android:backgroundTint="@color/colorWhite">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edDescricao"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="23dp"
            android:backgroundTint="@color/colorGreen"
            android:foregroundTint="@color/colorGreen"
            android:textColor="@color/colorGreen"
            android:textColorHighlight="@color/colorGreen"
            android:textColorHint="@color/colorGreen"
            android:textColorLink="@color/colorGreen"
            android:textCursorDrawable="@color/colorGreen"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:fontFamily="@font/amethysta"
            android:text="Descrição"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnDescartar"
        android:layout_width="122dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btnAdNota"
        android:layout_alignParentStart="true"
        android:layout_marginStart="64dp"
        android:background="@drawable/dialog_shape_layout"
        android:backgroundTint="@color/color_red"
        android:fontFamily="@font/amethysta"
        android:text="Descartar"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnAdNota"
        android:layout_width="122dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/dialog_shape_layout"
        android:fontFamily="@font/amethysta"
        android:text="Salvar"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

</RelativeLayout>
