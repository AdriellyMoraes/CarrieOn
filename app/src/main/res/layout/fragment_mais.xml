<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aluno.carrieon.Telas.Fragments.MaisFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorGreen">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/colorGreen"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:toolbarId="@+id/toolbar">

            <TextView
                android:id="@+id/txtMais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/colorWhite"
                android:fontFamily="@font/amethysta"
                android:text="Mais"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="150dp"
            tools:context="com.example.aluno.carrieon.Telas.Fragments.MaisFragment">

            <!-- TODO: Update blank fragment layout -->

            <Button
                android:id="@+id/btnSair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="312dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/icon_sair"
                android:drawablePadding="10dp"
                android:ellipsize="start"
                android:paddingLeft="20dp"
                android:text="Sair"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                app:layout_anchor="@+id/nestedScrollView"
                app:layout_anchorGravity="left|center" />

            <View
                android:id="@+id/linha1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="65dp"
                android:background="@android:color/darker_gray" />

            <View
                android:id="@+id/linha2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="125dp"
                android:background="@android:color/darker_gray" />

            <View
                android:id="@+id/linha3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="185dp"
                android:background="@android:color/darker_gray" />

            <View
                android:id="@+id/linha4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="245dp"
                android:background="@android:color/darker_gray" />

            <View
                android:id="@+id/linha5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="305dp"
                android:background="@android:color/darker_gray" />

            <View
                android:id="@+id/linha6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="365dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/btnSobre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="252dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/icon_sobre"
                android:drawablePadding="10dp"
                android:ellipsize="start"
                android:paddingLeft="20dp"
                android:text="Sobre"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnEdAtividades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="132dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/icon_atividades"
                android:drawablePadding="10dp"
                android:ellipsize="start"
                android:paddingLeft="20dp"
                android:text="Editar atividades"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnEdHumores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/icon_humor"
                android:drawablePadding="10dp"
                android:ellipsize="start"
                android:paddingLeft="20dp"
                android:text="Editar humores"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnLembrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="192dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/icon_lembrete"
                android:drawablePadding="10dp"
                android:ellipsize="start"
                android:paddingLeft="20dp"
                android:text="Lembrete"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnConta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/icon_conta"
                android:drawablePadding="10dp"
                android:ellipsize="start"
                android:paddingLeft="20dp"
                android:text="Conta"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />


        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
